<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    >


    <EditText
        android:id="@+id/add_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/add_trackNumber_dialog_title_hint" />

    <EditText
        android:id="@+id/add_new_track_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_new_title"
        android:layout_alignStart="@+id/add_new_title"
        android:layout_below="@+id/add_new_title"
        android:hint="@string/add_trackNumber_dialog_trackNumber_hint" />
</RelativeLayout>